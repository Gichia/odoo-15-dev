<?xml version="1.0"?>
<odoo>
    <record id="cancel_appointment_wizard_view_form" model="ir.ui.view">
        <field name="name">cancel.appointment.wizard.form</field>
        <field name="model">cancel.appointment.wizard</field>
        <field name="arch" type="xml">
            <form string="Lost Reason">
                <group class="oe_title">
                    <field name="appointment_id" options="{'no_create_edit': True}" />
                    <field name="reason" />
                </group>
                <footer>
                    <button 
                        name="action_cancel_appointment" 
                        string="Submit" type="object" class="btn-danger" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="cancel_appointment_wizard_action" model="ir.actions.act_window">
        <field name="name">Cancel Appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cancel.appointment.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="cancel_appointment_wizard_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>
