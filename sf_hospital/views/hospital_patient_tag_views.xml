<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- The tree to display existing patient records -->
        <record id="hospital_patient_tag_view_tree" model="ir.ui.view">
            <field name="name">hospital.patient.tags.tree</field>
            <field name="model">hospital.patient.tag</field>
            <field name="arch" type="xml">
                <tree string="Patient Tags">
                    <field name="name" string="Name" />
                    <field name="active" string="Active" />
                </tree>
            </field>
        </record>

        <!-- The form view shows up when create and edit buttons are clicked -->
        <record id="hospital_patient_tag_view_form" model="ir.ui.view">
            <field name="name">hospital.patients.tags.form</field>
            <field name="model">hospital.patient.tag</field>
            <field name="arch" type="xml">
                <form string="Patient Tags">
                    <sheet>
                        <widget name="web_ribbon" title="InActive" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <group string="Basic Details">
                            <field name="name" string="Name" />
                            <field name="active" string="Active" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- The action window presents the buttons on the top of the page, usually accompanied by the tree view -->
        <record id="hospital_patient_tags_action" model="ir.actions.act_window">
            <field name="name">Patient Tags</field>
            <field name="res_model">hospital.patient.tag</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Define a new patient tag
                </p>
                <p>
                    A hospital patient tags.
                </p>
            </field>
        </record>

        <menuitem
            id="menu_hospital_patient_tags"
            name="Patient Tags"
            parent="menu_hospital_configurations"
            action="hospital_patient_tags_action"
            sequence="10"
        />

    </data>
</odoo>
