<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- The action window presents the buttons on the top of the page, usually accompanied by the tree view -->
        <record id="hospital_female_patients_action" model="ir.actions.act_window">
            <field name="name">Female Patients</field>
            <field name="res_model">hospital.patient</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_gender': 'female'}</field>
            <field name="domain">[('gender', '=', 'female')]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Define a new hospital patient
                </p>
                <p>
                    A hospital patient is the base of the hopsital management module.
                </p>
            </field>
        </record>

        <menuitem
            id="menu_hospital_patient_female_patients"
            name="Female Patients"
            parent="menu_hospital_patient_details"
            action="hospital_female_patients_action"
            sequence="10"
        />

    </data>
</odoo>