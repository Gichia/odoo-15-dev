<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- The search view to define fields to search -->
        <record id="hospital_patient_view_search" model="ir.ui.view">
            <field name="name">hospital.patients.search</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <search string="Patients">
                    <field name="name" string="Patient Name" filter_domain="['|', ('name','ilike',self), ('ref','ilike',self)]" />
                    <field name="ref" string="Reference" />
                    <field name="age" string="Patient Age" />
                    <field name="gender" string="Patient Gender" />
                    <filter name="filter_male" string="Male Patients" domain="[('gender', '=', 'male')]" />
                    <filter name="filter_female" string="Female Patients" domain="[('gender', '=', 'female')]" />
                    <separator />
                    <filter name="filter_kids" string="Kids (Less Than 5 Yrs)" domain="[('age', '&lt;', 5)]" />
                    <group expand="1" string="Group By">
                        <filter string="Gender" name='group_by_gender' context="{'group_by':'gender'}" />
                    </group>
                </search>
            </field>
        </record>

        <!-- The tree to display existing patient records -->
        <record id="hospital_patient_view_tree" model="ir.ui.view">
            <field name="name">hospital.patients.tree</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <tree string="Patients">
                    <field name="name" string="Patient Name" />
                    <field name="ref" string="Reference" />
                    <field name="age" string="Patient Age" />
                    <field name="gender" string="Patient Gender" />
                </tree>
            </field>
        </record>

        <!-- The form view shows up when create and edit buttons are clicked -->
        <record id="hospital_patient_view_form" model="ir.ui.view">
            <field name="name">hospital.patients.form</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <form string="Patients">
                    <sheet>
                        <group string="Basic Details">
                            <group>
                                <field name="name" string="Name" />
                                <field name="gender" string="Gender" />
                            </group>
                            <group>
                                <field name="age" string="Age" />
                                <field name="ref" string="Reference" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- The action window presents the buttons on the top of the page, usually accompanied by the tree view -->
        <record id="hospital_patients_action" model="ir.actions.act_window">
            <field name="name">Patients</field>
            <field name="res_model">hospital.patient</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Define a new hospital patient
                </p>
                <p>
                    A hospital patient is the base of the hopsital management module.
                </p>
            </field>
        </record>

        <menuitem
            id="menu_hospital_patient_patients"
            parent="menu_hospital_patient_details"
            action="hospital_patients_action"
            sequence="1"
        />

    </data>
</odoo>