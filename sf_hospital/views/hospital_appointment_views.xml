<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- The activity view to display activities for all records -->
        <record id="hospital_appointment_view_activity" model="ir.ui.view">
            <field name="name">hospital.appointments.activity</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <activity string="Appointments">
                    <field name="patient_id" />
                    <field name="ref" />
                    <templates>
                        <div t-name="activity-box">
                            <img 
                                t-att-src="activity_image('hospital.patient', 'image', record.patient_id.raw_value)"
                                t-att-title="record.patient_id.value"
                                t-att-alt="record.patient_id.value"
                            />
                            <div>
                                <field name="ref" display="full" />
                            </div>
                        </div>
                    </templates>
                </activity>
            </field>
        </record>

        <!-- The tree to display existing appointment records -->
        <record id="hospital_appointment_view_tree" model="ir.ui.view">
            <field name="name">hospital.appointments.tree</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <tree
                    sample="1"
                    delete="0"
                    multi_edit="1"
                    string="Appointments"
                    decoration-success="state == 'done'"
                    decoration-danger="state == 'cancel'"
                    decoration-info="state == 'in_consultation'"
                >
                    <field name="patient_id" string="Patient" />
                    <field name="doctor_id" string="Doctor" widget="many2one_avatar_user" />
                    <field name="appointment_time" />
                    <field name="booking_date" optional="hide" />
                    <field name="activity_ids" widget="list_activity" />
                    <field 
                        name="state"
                        widget="badge"
                        decoration-danger="state == 'cancel'"
                        decoration-info="state == 'in_consultation'"
                        decoration-success="state == 'done'"
                    />
                </tree>
            </field>
        </record>

        <!-- The form view shows up when create and edit buttons are clicked -->
        <record id="hospital_appointment_view_form" model="ir.ui.view">
            <field name="name">hospital.appointments.form</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <form create="0" string="Appointments">
                    <header>
                        <!-- attrs="{'invisible': [('state', '!=', 'draft')]}" -->
                        <button 
                            type="object" 
                            class="btn-info"
                            string="Confirm" 
                            name="action_confirm"
                            states="draft"
                            help="On clicking this button, the appointment will be confirmed and set to 'In Consultation'"
                        />
                        <button 
                            type="object" 
                            class="btn-success"
                            string="Set as Done" 
                            name="action_done"
                            data-hotkey="d"
                            help="On clicking this button, the appointment will be set to done"
                            states="in_consultation"
                        />
                        <!-- <button 
                            name="action_cancel" 
                            type="object"
                            string="Cancel"
                            class="btn-danger"
                            data-hotkey="z"
                            help="On clicking this button, the appointment will be cancelled"
                            states="in_consultation,draft"
                        /> -->
                        <button 
                            type="action"
                            string="Cancel"
                            class="btn-danger"
                            data-hotkey="z"
                            name="%(sf_hospital.cancel_appointment_wizard_action)d"
                            confirm="Are you sure you want to cancel the appointment?"
                            help="On clicking this button, the appointment will be cancelled"
                            states="in_consultation,draft"
                            context="{'default_appointment_id': active_id}"
                        />
                        <button 
                            states="done,cancel"
                            name="action_confirm" 
                            type="object"
                            string="Reactivate"
                            confirm="Are you sure you want to reactivate the appointment?"
                            help="On clicking this button, the appointment will be reactivated"
                        />
                        <field
                            name="state" 
                            widget="statusbar" 
                            nolabel="1" 
                            options="{'fold_field': 'fold'}"
                            statusbar_visible="draft,in_consultation,done"
                        />
                    </header>

                    <sheet>
                        <widget
                            name="web_ribbon" 
                            title="Cancelled" 
                            bg_color="bg-danger" 
                            attrs="{'invisible': [('state', '!=', 'cancel')]}"
                        />
                        <widget
                            name="web_ribbon" 
                            title="Done" 
                            bg_color="bg-success" 
                            attrs="{'invisible': [('state', '!=', 'done')]}"
                        />

                        <div class="oe_title">
                            <h1>
                                <field name="priority" widget="priority" class="mr-3"/>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>

                        <group string="Appointment Details">
                            <group>
                                <field name="patient_id" string="Patient" />
                                <field name="ref" />
                                <field name="gender" />
                                <field name="doctor_id" />
                                <field name="booking_date" />
                            </group>
                            <group>
                                <field name="appointment_time" default_focus="1" />
                            </group>
                        </group>

                        <!-- Notebook -->
                        <notebook>
                            <page string="Prescription">
                                <field 
                                    name="prescription"
                                    placeholder="Enter prescription here... Type / to see more options."
                                    options="{'collaborative': true, 'resizable': true, 'codeview': true}"
                                />
                            </page>
                            <page string="Pharmacy">
                                <field name="pharmacy_line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id" />
                                        <field name="price_unit" string="Unit Price" />
                                        <field name="qty" />
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="product_id" />
                                            <field name="price_unit" string="Unit Price" />
                                            <field name="qty" />
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>

                    <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- The action window presents the buttons on the top of the page, usually accompanied by the tree view -->
        <record id="hospital_appointment_action" model="ir.actions.act_window">
            <field name="name">Appointments</field>
            <field name="res_model">hospital.appointment</field>
            <field name="view_mode">tree,form,activity</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new appointment.
                </p>
                <p>
                    Appointments are created by the doctor or the patient.
                </p>
            </field>
        </record>

        <menuitem
            sequence="10"
            name="Appointments"
            id="menu_hospital_appointment"
            parent="menu_hospital_appointments_root"
            action="hospital_appointment_action"
        />

    </data>
</odoo>